{
    "compilerOptions": {
       // "target": "es6",
       "target": "es5",
       // "module" : "es6", //'es2015
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
      //  "jsx": "react",
       // "watch" : true,
        // new ^^
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "outDir" : "js",
       // "sourceMap" : true,
        "inlineSourceMap": true,
        "preserveConstEnums": true,
         //"jsx": "react",
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "src/match/algol.ts",
        "src/match/erbase.ts",
        "src/match/erindex.ts",
        "src/match/ererror.ts",
        "src/match/iferbase.ts",
        "src/match/iferbase.ts",
        "src/match/inputFilter.ts",
        "src/match/inputFilterRules.ts",
        "src/match/sentence.ts",
        "src/match/word.ts",
        "src/index.ts"
    ],
    "exclude": [
//  "!node_modules/**"
    ]
}